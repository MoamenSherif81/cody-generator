    "dsl": "row {\n  box {\n    paragraph<text=(\"Oops\")>\n  }\n}"
  },
  {
    "test_name": "leaf_tag_contains_another_leaf",
    "test_description": "A leaf tag improperly contains another leaf tag",
    "dsl": "row {\n  box {\n    title<text=(\"Main\")> {\n      button<text=(\"Inner\")>\n    }\n  }\n}"
  },
  {
    "test_name": "row_contains_box_and_leaf_side_by_side",
    "test_description": "Row contains both a box and a leaf at same level",
    "dsl": "row {\n  box {\n    title<text=(\"Valid\")>\n  },\n  button<text=(\"Invalid\")>\n}"
  }
